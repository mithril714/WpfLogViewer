<Window x:Class="WpfLogViewerApp.EditorSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="外部エディタ設定" Height="220" Width="520" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="エディタ実行ファイル:" VerticalAlignment="Center" Margin="0,0,8,0"/>
        <TextBox x:Name="txtEditorPath" Grid.Column="1" Margin="0,0,8,0" />
        <Button Grid.Column="2" Content="参照..." Width="80" Click="Browse_Click"/>

        <TextBlock Grid.Row="1" Text="引数テンプレート:" VerticalAlignment="Center" Margin="0,10,8,0"/>
        <TextBox x:Name="txtArgs" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,10,0,0"
             ToolTip="{Binding RelativeSource={RelativeSource Self}, Path=Tag}">
            <TextBox.Tag>
                例: VSCode: "{file}:{line}" / 秀丸: "/J={line} {file}" / sakura: "-Y={line} {file}"
            </TextBox.Tag>
        </TextBox>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="100" Margin="0,0,8,0" Click="OK_Click"/>
            <Button Content="キャンセル" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
